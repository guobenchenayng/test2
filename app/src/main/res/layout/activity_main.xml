<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yfy.tv.ui.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>

    <include layout="@layout/underline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim98"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_2"
        android:paddingTop="@dimen/space_5"
        >
        <ImageView
            android:id="@+id/iv_tab_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/tab_live"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_tab_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/tab_video"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_tab_comic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/tab_comic"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_tab_novel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/tab_mine"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>